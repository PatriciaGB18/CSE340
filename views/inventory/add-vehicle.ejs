<section class="add-vehicle-container">
  <h1>Add New Vehicle</h1>

  <form class="add-vehicle-form" method="post" action="/inv/add">
    
    <div>
      <label for="inv_make">Make:</label>
      <input type="text" id="inv_make" name="inv_make" required>
    </div>

    <div>
      <label for="inv_model">Model:</label>
      <input type="text" id="inv_model" name="inv_model" required>
    </div>

    <div>
      <label for="inv_year">Year:</label>
      <input type="number" id="inv_year" name="inv_year" required>
    </div>

    <div>
      <label for="inv_price">Price:</label>
      <input type="number" id="inv_price" name="inv_price" required>
    </div>

    <div>
      <label for="inv_miles">Miles:</label>
      <input type="number" id="inv_miles" name="inv_miles" required>
    </div>

    <div>
      <label for="inv_color">Color:</label>
      <input type="text" id="inv_color" name="inv_color">
    </div>

    <div>
        <label for="inv_description">Description:</label>
        <textarea name="inv_description" id="inv_description" required></textarea>
    </div>


    <div>
      <label for="classification_id">Classification:</label>
      <%- classificationSelect %>
    </div>

    <div>
      <label for="inv_image">Image Path:</label>
      <input type="text" id="inv_image" name="inv_image" value="/images/vehicles/no-image.png">
    </div>

    <div>
      <label for="inv_thumbnail">Thumbnail Path:</label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="/images/vehicles/no-image-thumb.png">
    </div>

    <div class="add-vehicle-submit">
      <button type="submit">Add Vehicle</button>
    </div>

  </form>
</section>
