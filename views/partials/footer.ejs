<%# --- SCRIPT DO MENU HAMBÚRGUER --- %>
<%# Adicione este script ao final do seu footer %>
<script>
    // Hamburger Menu Toggle
    // Seleciona o botão que você adicionou no header.ejs
    const hamButton = document.querySelector('#hamburgerBtn');
    
    // Seleciona o menu que está no seu navigation.ejs
    const navigation = document.querySelector('nav ul'); 

    hamButton.addEventListener('click', (e) => {
        e.preventDefault(); // Impede o link de pular para o topo
        // Adiciona ou remove a classe '.open'
        navigation.classList.toggle('open'); 
    });
</script>